<Page x:Class="DeepMiningInc.App.Views.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:DeepMiningInc.App.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewModels="using:DeepMiningInc.App.ViewModels"
      xmlns:xaml="using:Microsoft.Graphics.Canvas.UI.Xaml"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <xaml:CanvasAnimatedControl x:Name="AnimatedCanvas"
                                    CreateResources="{x:Bind ViewModel.CreateResources}"
                                    Draw="{x:Bind ViewModel.Render}"
                                    Paused="False"
                                    PointerMoved="{x:Bind ViewModel.CanvasControl_PointerMoved}"
                                    PointerWheelChanged="{x:Bind ViewModel.AnimatedCanvas_PointerWheelChanged}" />
    </Grid>
</Page>
